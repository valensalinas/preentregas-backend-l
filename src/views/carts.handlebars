<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Carrito</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body style="background-color: #333; color: #fff">
    <div class="container">
        <h1 class="mt-4 mb-3">Carrito de Compras</h1>
        
        {{#if cart.products.length}}
        <ul class="list-group mb-3">
            {{#each cart.products}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <h5>{{this.product.name}}</h5>
                    <p>Precio: ${{this.product.price}}</p>
                    <p>Cantidad: {{this.quantity}}</p>
                </div>
                <form action="/api/carts/{{../cart._id}}/products/{{this.product._id}}" method="POST">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </li>
            {{/each}}
        </ul>
        <div class="text-end">
            <form action="/api/carts/{{cart._id}}" method="POST">
                <button type="submit" class="btn btn-warning">Vaciar Carrito</button>
            </form>
        </div>
        {{else}}
        <p class="text-center">El carrito está vacío.</p>
        {{/if}}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
